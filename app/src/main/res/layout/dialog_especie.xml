<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RadioGroup
        android:id="@+id/rgSpecies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/rbElf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txtelfo" />

        <RadioButton
            android:id="@+id/rbDwarf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txtenano" />

        <RadioButton
            android:id="@+id/rbHobbit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txthobbit" />

        <RadioButton
            android:id="@+id/rbHuman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txthumano" />
    </RadioGroup>



</androidx.constraintlayout.widget.ConstraintLayout>